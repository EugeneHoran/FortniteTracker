<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.stats.StatsMainFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:title="Weapons"/>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">

        <fortnite.eugene.com.togglebuttonlayout.ToggleButtonLayout
                android:id="@+id/toggleButtonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectedColor="?attr/colorPrimary"
                app:allowDeselection="false"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:customLayout="@layout/view_toggle_button"
                app:menu="@menu/toggle_season"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>